@model MVVMv2.ViewModel.AnimalViewModel



<div class=" = " container p-3"">
    <div class="row pt-4">

        <div class="col-9">
            <h2 class="text-primary"> Animal Search</h2>
        </div>
        <div class="col-3 text-right">
            <a asp-controller="Animal" asp-action="Index" class="btn btn-primary">
                Back
            </a>
        </div>
    </div>

    <br /> <br />

    @if (Model.Animals.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Nome
                    </th>
                    <th>
                        Weight
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var obj in Model.Animals)
                {
                    <tr>
                        <td width="50%">@obj.Name</td>
                        <td width="30%">@obj.Weight</td>
                        <td class="test-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Animal" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    Edit
                                </a>
                                <a asp-controller="Animal" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    Delete
                                </a>

                                <form method="post" asp-for="@obj.Id" asp-route-Id="@obj.Id" asp-action="DeletePost2">
                                    <input type="submit" class="btn btn-danger w-100" value="INSTA Delete" />
                                </form>


                            </div>

                        </td>

                    </tr>
                }

            </tbody>
        </table>
    }
    else
    {
        <p>No Animals exist</p>
    }


</div>

