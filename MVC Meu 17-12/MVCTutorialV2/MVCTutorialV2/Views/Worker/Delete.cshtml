@model Worker;


<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden>
    <div class=" border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Worker</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="nome"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="nome" disabled class=" form-control" />

                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="idade"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="idade" disabled class= " form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>


