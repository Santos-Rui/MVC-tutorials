@model IEnumerable<Worker>



<div class=" = " container p-3"">
    <div class="row pt-4">

        <div class="col-6">
            <h2 class="text-primary"> Workers List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Worker" asp-action="Create" class="btn btn-primary">
                Create new Category

            </a>
        </div>
    </div>

    <br /> <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Nome
                    </th>
                    <th>
                        Idade
                    </th>
                    <th>
                        Butoes
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.nome</td>
                        <td width="30%">@obj.idade</td>
                        <td class="test-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Worker" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    Edit
                                </a>
                                <a asp-controller="Worker" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    Delete
                                </a>
                            </div>

                        </td>

                    </tr>
                }

            </tbody>
        </table>
    }
    else
    {
        <p>No Workers exist</p>
    }


</div>

