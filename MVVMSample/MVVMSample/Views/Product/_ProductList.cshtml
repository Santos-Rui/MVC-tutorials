@using MVVMSample.Models;
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Product Number</th>
            <th class="text-right">Cost</th>
            <th class="text-right">Price</th>
            <th class="text-right"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Product item in Model.Products)
        {
        <tr>
            <td>@Html.DisplayFor(m => item.Name)</td>
            <td>@Html.DisplayFor(m => item.ProductNumber)</td>
            <td class="text-right">@Html.DisplayFor(m => item.StandardCost)</td>
            <td class="text-right">@Html.DisplayFor(m => item.ListPrice)</td>
            <td class="test-center">
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Product" asp-route-Id="@item.ProductID" asp-action="Edit" class="btn btn-primary mx-2">
                        Edit
                    </a>
                    <a asp-controller="Product" asp-route-Id="@item.ProductID" asp-action="Delete" class="btn btn-danger mx-2">
                        Delete
                    </a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>
